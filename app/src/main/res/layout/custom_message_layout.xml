<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/message_user_image_civ"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/pic"
        android:padding="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/receiver_message_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="TextView"
        android:padding="8dp"
        android:textColor="@android:color/black"

        android:background="@drawable/receiver_messages_layout"
        app:layout_constraintStart_toEndOf="@+id/message_user_image_civ"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/sender_message_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:padding="8dp"
        android:textColor="@android:color/black"
        app:layout_constraintBaseline_toBaselineOf="@+id/receiver_message_text"
        android:background="@drawable/sender_messages_layout"
        app:layout_constraintEnd_toEndOf="parent" />
</android.support.constraint.ConstraintLayout>